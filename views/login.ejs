<body>
    <div class="container">
            <a href="/" class="col-md-4 d-flex align-items-center justify-content-left mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <img src="/public/pictures/logo.png" width="40" height="53" class="bi me-2" />
                <span class="fs-4">IoTech</span>
            </a>
    </div>
